{
  "manifest_version": 3,
  "name": "JobSpeed",
  "version": "1.0.0",
  "description": "Auto-fill job applications with your resume data",
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.ts"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.svg"
    },
    "default_title": "JobSpeed"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.ts"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["upload.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
